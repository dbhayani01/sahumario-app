# ─── Frontend (built into the JS bundle by CRA) ──────────────────────────────
# Base URL for the Django/Express backend (only needed for non-Vercel deploys)
REACT_APP_API_URL=http://localhost:8000

# Supabase — get these from Supabase dashboard → Settings → API
REACT_APP_SUPABASE_URL=https://xxxxxxxxxxxxxxxxxxx.supabase.co
REACT_APP_SUPABASE_ANON_KEY=eyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Razorpay publishable key — safe to expose to the browser
REACT_APP_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx

# ─── Admin panel (local dev only — NEVER deploy with these set) ──────────────
REACT_APP_ADMIN_ENABLED=true
REACT_APP_GITHUB_TOKEN=github_pat_xxxxxxxxxxxx
REACT_APP_GITHUB_OWNER=your-github-username
REACT_APP_GITHUB_REPO=sahumario-app
REACT_APP_GITHUB_BRANCH=main

# ─── Server-side only (Vercel serverless functions) ─────────────────────────
# Set these in Vercel dashboard → Settings → Environment Variables
# NEVER prefix with REACT_APP_ — must never reach the browser
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
